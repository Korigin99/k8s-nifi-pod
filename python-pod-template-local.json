{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "python-log-PLACEHOLDER",
    "namespace": "python-jobs",
    "labels": { "app": "python-log" }
  },
  "spec": {
    "restartPolicy": "Never",
    "containers": [
      {
        "name": "python-worker",
        "image": "test-python:latest",
        "imagePullPolicy": "Never",
        "resources": {
          "requests": { "memory": "128Mi", "cpu": "50m" },
          "limits": { "memory": "256Mi", "cpu": "200m" }
        }
      }
    ]
  }
}
